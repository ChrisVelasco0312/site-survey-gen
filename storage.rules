rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Report images: only authenticated users can read/write
    match /reports/{reportId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Generated report PDFs: only authenticated users can read/write
    match /generated_reports/{reportId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
